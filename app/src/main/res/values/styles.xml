<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">>
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- activity auth. -->
    <style name="auth_txt" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/auth_txt_margin_bott</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="auth_field">
        <item name="android:layout_width">@dimen/auth_txt_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/auth_txt_field_margin_bott</item>
    </style>

    <!-- alert frag newRequest. -->
    <style name="Alert_New_Request_Btn" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Alert_New_Request_TV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Alert_New_Request_ET">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/alert_new_request_et_width</item>
    </style>

    <style name="Alert_New_Request_ET_multy">
        <item name="android:layout_width">@dimen/alert_new_request_et_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">10</item>
        <item name="android:lines">8</item>
        <item name="android:minLines">7</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="Alert_New_Request_spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
